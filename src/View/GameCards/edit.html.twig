{% extends "layout.html.twig" %}

{% block content %}
    <form class="game-card-form" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
        
        <h1>Modifier la carte</h1>
        
        <label for="name">Name</label>
        <input type="text" id="name"/>
        <label for="description">Description</label>
        <textarea rows="10" id="description"></textarea>
        <label for="card-number">Nombre</label>
        <input type="number" id="card-number" value="{{ card.number }}">
        
        <button type="submit">Modifier</button> 

    </form>
{% endblock %}