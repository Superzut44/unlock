{% extends 'layout.html.twig' %}
{% block content %}
	<div class="game-show-desription-screen">
		<div class="game-show-unlock">
			<h1 class="game-show-unlock-h1">UNLOCK !</h1>
			<h2 class="game-show-unlock-h2">Sherlock Adventure</h2>
		</div>
		<div class="game-show-description">
			<h2 class="game-show-title">{{ game.name }}</h2>
			<p class="game-show-description-p">{{ game.description }}</p>
			<p class="game-show-instruction-p">A l'aide des differentes combinaisons de cartes, recherche la clé qui te mènera vers la sortie.</p>
			<a href="/games/play?id={{ game.id }}" class="game-show-link">JOUER</a>
		</div>
	</div>

{% endblock %}