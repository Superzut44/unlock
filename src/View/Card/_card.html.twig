<div class="card">
	<h2 class="card-title">{{ card.name }}</h2>
	<img class="card-image" src="{{ card.image }}" alt="image de la carte">
	<p class="card-description">{{ card.description }}</p>
	<a class="card-link-to-details" href="/cards/show?id={{ card.id }}">
		<span class="card-details-span">Details</span>
	</a>
</div>
